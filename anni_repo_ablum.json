{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/snylonue/anni_schema/master/anni_repo_ablum.json",
    "type": "object",
    "title": "Anni Repo Album",
    "properties": {
        "album" : {
            "type": "object",
            "properties": {
                "album_id": {
                    "type": "string",
                    "description": "should be a uuid"
                },
                "title": {
                    "type": "string"
                },
                "edition" : {
                    "type": "string"
                },
                "artist": {
                    "type": "string"
                },
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "type": {
                    "type": "string",
                    "enum": ["normal", "instrumental", "absoulte", "drama", "radio", "vocal"]
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true
                }
            },
            "required": ["album_id", "title", "artist", "date", "type"]
        },
        "discs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "catalog": {
                        "type": "string"
                    },
                    "tracks": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "artist": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "enum": ["normal", "instrumental", "absoulte", "drama", "radio", "vocal"]
                                },
                                "tags": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "minItems": 1,
                                    "uniqueItems": true
                                }
                            },
                            "required": ["title"]
                        }
                    }
                },
                "required": ["catalog"]
            },
            "uniqueItems": true
        }
    }
}